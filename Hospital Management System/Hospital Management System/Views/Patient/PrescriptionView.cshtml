                                            }
                                            @if (@Model.Evening2)
                                            {
                                                @("Evening")
                                            }
                                        </h4>
                                        <br />
                                    </div>
                                }



                                @if (@Model.Medicine3 != null)
                                {
                                    <div class="job">
                                        <h2>Medicine: @Model.Medicine3</h2>
                                        <h4>
                                            @if (@Model.Morning3)
                                            {
                                                @("Morning" + " -")
                                            }
                                            @if (@Model.Afternoon3)
                                            {
                                                @("Afternoon" + " -")
                                            }
                                            @if (@Model.Evening3)
                                            {
                                                @("Evening")
                                            }
                                        </h4>
                                        <br />
                                    </div>
                                }



                                @if (@Model.Medicine4 != null)
                                {
                                    <div class="job">
                                        <h2>Medicine: @Model.Medicine4</h2>
                                        <h4>
