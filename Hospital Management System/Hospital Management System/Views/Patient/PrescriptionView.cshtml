                                            {
                                                @("Afternoon" + " -")
                                            }
                                            @if (@Model.Evening5)
                                            {
                                                @("Evening")
                                            }
                                        </h4>
                                        <br />
                                    </div>
                                }



                                @if (@Model.Medicine6 != null)
                                {
                                    <div class="job">
                                        <h2>Medicine: @Model.Medicine6</h2>
                                        <h4>
                                            @if (@Model.Morning6)
                                            {
                                                @("Morning" + " -")
                                            }
                                            @if (@Model.Afternoon6)
                                            {
                                                @("Afternoon" + " -")
                                            }
                                            @if (@Model.Evening6)
                                            {
                                                @("Evening")
                                            }
                                        </h4>
                                        <br />
                                    </div>
                                }



                                @if (@Model.Medicine7 != null)
                                {
                                    <div class="job">
                                        <h2>Medicine: @Model.Medicine7</h2>
                                        <h4>
                                            @if (@Model.Morning7)
                                            {
                                                @("Morning" + " -")
                                            }
                                            @if (@Model.Afternoon7)
                                            {
                                                @("Afternoon" + " -")
                                            }
                                            @if (@Model.Evening7)
                                            {
                                                @("Evening")
                                            }
                                        </h4>
                                        <br />
                                    </div>
                                }

                            </div><!--// .yui-u -->
                        </div><!--// .yui-gf -->


                        <div class="yui-gf last">
                            <div class="yui-u first">
                                <h2>Check Up After</h2>
                            </div>
                            <div class="yui-u">
                                <h2>@(Model.CheckUpAfterDays + " Days")</h2>
                            </div>
                        </div><!--// .yui-gf -->


                    </div><!--// .yui-b -->
                </div><!--// yui-main -->
            </div><!--// bd -->

            <div id="ft">
                <p>Doctor Timing: @(Model.DoctorTiming)</p>
            </div><!--// footer -->

        </div><!-- // inner -->


    </div>
</body>
