@model Hospital_Management_System.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
}


<section class="section-form" id="contact">
<div class="row">
    <h2>@ViewBag.Title.</h2>
</div>
@using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()


    <div class="row">
        <div class="col span-1-of-4">

        </div>
        <div class="col span-2-of-4">
            <div class="plan-box">
                <div>
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Code)
                    <div>
                        <label for="name">Password<span style="color: red; font-weight: bold">*</span></label>
                        @Html.PasswordFor(m => m.Password, new { @placeholder = "Password", id = "name" })
                        @*@Html.ValidationMessageFor(m => m.UserName, "", new {@class = "text-danger"})*@
                    </div>
                    <div>
                        <label for="name">Confirm Password<span style="color: red; font-weight: bold">*</span></label>
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @placeholder = "Confirm Password", id = "name" })
                        @*@Html.ValidationMessageFor(m => m.UserName, "", new {@class = "text-danger"})*@
                    </div>
                    <br />
                    <p>
                        @Html.ActionLink("Back to Dashboard", "Login")
                    </p>
                </div>
                <div style="text-align: center !important">
                    <input type="submit" value="Change Password" class="btn btn-ghost">
                </div>
            </div>
        </div>
        <div class="col span-1-of-4">

        </div>
    </div>
}
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
