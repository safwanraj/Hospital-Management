@model IEnumerable<Hospital_Management_System.Models.Schedule>

@{
    ViewBag.Title = "ListOfSchedules";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <ol class="breadcrumb">
        <li>
            <a href="#">
                <em class="fa fa-home"></em>
            </a>
        </li>
        <li class="active">Schedule</li>
        <li class="active">List of Schedules</li>
    </ol>
</div>

<h2>List Of Schedules</h2>

<p>
    @Html.ActionLink("Add Schedule", "AddSchedule", null, new {@class = "btn btn-primary" })
</p>
<table id="table_id" class="table">
    <thead>
        <tr>
            <th>
                Doctor Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AvailableStartDay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AvailableEndDay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AvailableStartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AvailableEndTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimePerPatient)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Doctor.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AvailableStartDay)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AvailableEndDay)
                </td>
                <td>
                    @item.AvailableStartTime.ToShortTimeString()
                </td>
                <td>
                    @item.AvailableEndTime.ToShortTimeString()
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TimePerPatient)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    <a href="@Url.Action("EditSchedule", new {id = item.Id})" class="fa fa-pencil-square-o" style="font-size: 19px"></a> |
                    <a href="@Url.Action("DeleteSchedule", new {id = item.Id})" class="fa fa-trash" style="font-size: 19px; color: red"></a>
                </td>
            </tr>
        }
    </tbody>

</table>

@section scripts {
    <script>
        $(document).ready(function () {
            $("#table_id").dataTable();
        });
    </script>
}
